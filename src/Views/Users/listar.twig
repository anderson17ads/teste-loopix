{% extends 'Layout/default.twig' %}

{% block container %}
	<h1 class="title">Listagem de Usu√°rios</h1>

	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">Nome</th>
	      <th scope="col">Email</th>
	      <th scope="col">Senha</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	  	{% for user in users %}
		    <tr>
		      <th scope="row">{{user.id}}</th>
		      <td>{{user.name}}</td>
		      <td>{{user.email}}</td>
		      <td>{{user.password}}</td>
		      <td>
		      	<a href="{{ base_url() }}/usuarios/editar">Alterar</>
		      	<a href="{{ base_url() }}/usuarios/deletar">Excluir</>
		      </td>
		    </tr>
	    {% endfor %}
	  </tbody>
	</table>	

{% endblock %}